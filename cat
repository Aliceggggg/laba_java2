import java.util.Collections;

public class Cat {
    private String cat;

    public Cat(String cat) {
        this.cat = cat;
    }

    public Cat() {
        this("");
    }

    public void setCat(String cat) {
        this.cat = cat;
    }

    public String getCat() {
        return String.format("Кот: %s", cat);
    }

    public String meow() {
        return String.format("%s: мяу!", cat);
    } 

    public String meowCount(int n) {
        return String.format("%s: %s!", cat, String.join("-", Collections.nCopies(n, "мяу")));
    } 
}
